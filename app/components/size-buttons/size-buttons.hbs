<CartSizeButton @count={{this.smallCount}} @onAddToCart={{fn this.addToCart @id @url 'small'}} @onRemoveFromCart={{fn
  this.removeFromCart @id 'small'}}>
  ${{this.price.items.small}} Small
</CartSizeButton>

